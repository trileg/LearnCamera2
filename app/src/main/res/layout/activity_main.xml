<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <RelativeLayout
    android:id="@+id/activity_main_ralative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.trileg.learncamera2.MainActivity">

    <TextureView
      android:id="@+id/activity_main_textureview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <View
      android:id="@+id/top_cover_view"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_alignTop="@id/activity_main_textureview"
      android:background="@android:color/black"/>

    <View
      android:id="@+id/bottom_cover_view"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_alignBottom="@id/activity_main_textureview"
      android:background="@android:color/black"/>

  </RelativeLayout>

</layout>